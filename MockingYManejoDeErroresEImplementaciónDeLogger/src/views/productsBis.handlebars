<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Productos</title>
</head>

<body>
    <div class="container mt-5">
        <h1>Productos</h1>

        <div class="row">
            <div class="col">
                <form id="form-add-product" class="mb-5">
                    <h2>Create Product</h2>
                    <div class="mb-3">
                        <label for="input-title" class="form-label">Title:</label>
                        <input type="text" id="input-title" class="form-control" name="title" required>
                    </div>
                    <div class="mb-3">
                        <label for="input-description" class="form-label">Description:</label>
                        <input type="text" id="input-description" class="form-control" name="description">
                    </div>
                    <div class="mb-3">
                        <label for="input-code" class="form-label">Code:</label>
                        <input type="text" id="input-code" class="form-control" name="code" required>
                    </div>
                    <div class="mb-3">
                        <label for="input-price" class="form-label">Price:</label>
                        <input type="text" id="input-price" class="form-control" name="price" required>
                    </div>
                    <div class="mb-3">
                        <label for="input-stock" class="form-label">Stock:</label>
                        <input type="text" id="input-stock" class="form-control" name="stock" required>
                    </div>
                    <div class="mb-3">
                        <label for="input-category" class="form-label">Category:</label>
                        <input type="text" id="input-category" class="form-control" name="category" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Create</button>
                </form>
            </div>
            <div class="col">
                <form id="form-delete-product" class="mb-5">
                    <h2>Delete Product</h2>
                    <div class="mb-3">
                        <label for="input-id-product" class="form-label">ID:</label>
                        <input type="text" id="input-id-product" class="form-control" name="id" required>
                    </div>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="col">
                <form id="form-update-product" class="mb-5">
                    <h2>Update Product</h2>
                    <div class="mb-3">
                        <label for="input-id-product-update" class="form-label">ID:</label>
                        <input type="text" id="input-id-product-update" class="form-control" name="id" required>
                    </div>
                    <div class="mb-3">
                        <label for="input-title-update" class="form-label">Title:</label>
                        <input type="text" id="input-title-update" class="form-control" name="title-update" required>
                    </div>
                    <div class="mb-3">
                        <label for="input-description-update" class="form-label">Description:</label>
                        <input type="text" id="input-description-update" class="form-control" name="description-update">
                    </div>
                    <div class="mb-3">
                        <label for="input-code-update" class="form-label">Code:</label>
                        <input type="text" id="input-code-update" class="form-control" name="code-update" required>
                    </div>
                    <div class="mb-3">
                        <label for="input-price-update" class="form-label">Price:</label>
                        <input type="text" id="input-price-update" class="form-control" name="price-update" required>
                    </div>
                    <div class="mb-3">
                        <label for="input-stock-update" class="form-label">Stock:</label>
                        <input type="text" id="input-stock-update" class="form-control" name="stock-update" required>
                    </div>
                    <div class="mb-3">
                        <label for="input-category-update" class="form-label">Category:</label>
                        <input type="text" id="input-category-update" class="form-control" name="category-update" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Update</button>
                </form>
            </div>
        </div>

        <article>
            <h1>Products</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Code</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Category</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}
                    <tr>
                        <td>{{this._id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.code}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.stock}}</td>
                        <td>{{this.category}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </article>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/index.js"></script>
</body>

</html>
