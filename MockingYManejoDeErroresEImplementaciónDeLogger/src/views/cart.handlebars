<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Carrito {{this.cartId}}</title>
</head>

<body>
    <div class="container mt-5">
        <h1>Carrito {{this.cartId}}</h1>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Product ID</th>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Stock</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                {{#each payload}}
                <tr>
                    <td>{{this.productId._id}}</td>
                    <td>{{this.productId.title}}</td>
                    <td>{{this.productId.price}}</td>
                    <td>{{this.productId.stock}}</td>
                    <td>{{this.quantity}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-3">
            <div>
                <button type="submit" class="btn btn-primary" value="{{this.cartId}}" id="comprarBtn">Comprar</button>
            </div>
            <div>
                <button type="button" class="btn btn-secondary" id="volverBtn">Volver</button>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/cart.js"></script>
    <script>
        document.getElementById('volverBtn').addEventListener('click', function () {
            window.history.back();
        });
    </script>
</body>

</html>
